<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/default_margin">

        <Button
            android:id="@+id/show_simple_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/show_simple_dialog_btn_text" />

        <Button
            android:id="@+id/show_simple_bottomsheet_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/show_simple_bottomsheet_dialog_btn_text" />

        <Button
            android:id="@+id/show_complex_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/show_complex_dialog_btn_text" />

        <Button
            android:id="@+id/show_complex_bottomsheet_dialog_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/show_complex_bottomsheet_dialog_btn_text" />
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>