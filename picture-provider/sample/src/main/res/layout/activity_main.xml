<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_margin">

        <Button
            android:id="@+id/camera_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/camera_btn_text" />

        <Button
            android:id="@+id/gallery_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/camera_btn"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/gallery_btn_test" />

        <Button
            android:id="@+id/chooser_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gallery_btn"
            android:layout_alignParentEnd="true"
            android:text="@string/chooser_btn_test" />

        <Button
            android:id="@+id/gallery_m_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gallery_btn"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/gallery_m_btn_text" />

        <Button
            android:id="@+id/chooser_m_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/gallery_m_btn"
            android:layout_alignParentEnd="true"
            android:text="@string/chooser_m_btn_text" />

        <Button
            android:id="@+id/chooser_save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/gallery_m_btn"
            android:layout_marginTop="@dimen/default_margin"
            android:layout_marginBottom="@dimen/default_margin"
            android:text="@string/chooser_save_btn_text" />

        <com.google.android.cameraview.CameraView
            android:id="@+id/camera_preview"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_below="@id/chooser_save_btn"/>
    </RelativeLayout>
</ScrollView>