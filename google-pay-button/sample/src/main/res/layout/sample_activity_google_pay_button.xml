            android:id="@+id/white_flat_gpay_titled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:gpbStyle="white_flat_buy_with_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Черная кнопка GPay с тенью, выключенная"
            tools:ignore="HardcodedText" />

        <ru.surfstudio.android.google_pay_button.GooglePayButton
            android:id="@+id/black_gpay_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:gpbStyle="black_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Черная кнопка GPay плоская, выключенная"
            tools:ignore="HardcodedText" />

        <ru.surfstudio.android.google_pay_button.GooglePayButton
            android:id="@+id/black_flat_gpay_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:gpbStyle="black_flat_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Белая кнопка GPay с тенью, выключенная"
            tools:ignore="HardcodedText" />

        <ru.surfstudio.android.google_pay_button.GooglePayButton
            android:id="@+id/white_gpay_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:gpbStyle="white_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Белая кнопка GPay плоская, выключенная"
            tools:ignore="HardcodedText" />

        <ru.surfstudio.android.google_pay_button.GooglePayButton
