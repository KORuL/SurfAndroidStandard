            android:id="@+id/white_flat_gpay_titled_disabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:gpbStyle="white_flat_buy_with_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="Белая кнопка GPay плоская, уменьшенный текст"
            tools:ignore="HardcodedText" />

        <ru.surfstudio.android.google_pay_button.GooglePayButton
            android:id="@+id/white_flat_gpay_scaled_down"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:gpcTextHeightPercent="0.4"
            app:gpbStyle="white_flat_buy_with_gpay" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
