<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PostfixEditText">   <!-- todo удалить если неунжно PostfixEditText -->
        <attr name="postfixText" format="string" />
        <attr name="postfixTextColor" format="color" />
        <attr name="postfixPadding" format="dimension" />
        <attr name="postfixTextAppearance" format="reference" />
    </declare-styleable>

    <attr name="titleFont" format="reference" />
    <attr name="subtitleFont" format="reference" />
    <attr name="titleTextSize" format="dimension" />
    <attr name="subtitleTextSize" format="dimension" />
    <attr name="titleTextColor" format="reference|color" />
    <attr name="subtitleTextColor" format="reference|color" />
    <attr name="isShowLetters" format="boolean" />

    <declare-styleable name="KeyView">
        <attr name="titleFont" />
        <attr name="subtitleFont" />
        <attr name="titleTextSize" />
        <attr name="subtitleTextSize" />
        <attr name="titleTextColor" />
        <attr name="subtitleTextColor" />
        <attr name="isShowLetters" />
    </declare-styleable>

    <declare-styleable name="KeyboardView">
        <attr name="leftButtonText" format="string" />
        <attr name="rightButtonText" format="string" />
        <attr name="leftButtonIcon" format="reference" />
        <attr name="rightButtonIcon" format="reference" />
        <attr name="titleFont" />
        <attr name="subtitleFont" />
        <attr name="titleTextSize" />
        <attr name="subtitleTextSize" />
        <attr name="titleTextColor" />
        <attr name="subtitleTextColor" />
        <attr name="isShowLetters" />
    </declare-styleable>
</resources>