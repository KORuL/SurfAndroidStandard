<resources>
    <!-- светлая тема -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackgroundLight</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundLight</item>

        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <!-- темная тема -->
    <style name="AppTheme.Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorWindowBackgroundDark</item>
        <item name="android:colorBackground">@color/colorWindowBackgroundDark</item>

        <item name="android:textViewStyle">@style/Text</item>
        <item name="cardViewStyle">@style/CardView</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Translucent">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- todo удалить, если не требуется на проекте -->
    <style name="KeyViewStyle">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">18dp</item>
        <item name="android:layout_marginEnd">18dp</item>
        <item name="android:background">?android:attr/selectableItemBackgroundBorderless</item>
        <item name="titleTextSize">32sp</item>
        <item name="subtitleTextSize">12sp</item>
        <item name="titleTextColor">?android:textColorPrimary</item>
        <item name="subtitleFont">@font/roboto_regular</item>
        <item name="subtitleTextColor">?android:textColorPrimary</item>
        <item name="titleFont">@font/roboto_regular</item>
        <item name="areLettersVisible">true</item>
    </style>
</resources>
