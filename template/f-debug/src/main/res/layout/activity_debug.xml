<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ru.surfstudio.standard.f_debug.debug.widget.DebugCatalogItemLayout
            android:id="@+id/show_controllers_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:catalog_item_name="@string/show_controllers_debug_item" />

        <ru.surfstudio.standard.f_debug.debug.widget.DebugCatalogItemLayout
            android:id="@+id/show_fcm_token_item_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:catalog_item_name="@string/show_fcm_token_debug_item" />
    </LinearLayout>
</ScrollView>